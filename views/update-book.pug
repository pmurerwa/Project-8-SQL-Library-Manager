extends layout

block content
  h1 Update Book Details

  if errors
    ul
      each error in errors
        li #{error.message}

  form(action=`/books/${book.id}` method="POST")
    div
      label(for="title") Title:
      input(type="text" name="title" id="title" value=book.title required)
    div
      label(for="author") Author:
      input(type="text" name="author" id="author" value=book.author required)
    div
      label(for="genre") Genre:
      input(type="text" name="genre" id="genre" value=book.genre)
    div
      label(for="year") Year:
      input(type="number" name="year" id="year" value=book.year)
    div
      button(type="submit") Update Book
    a(href="/books") Cancel
